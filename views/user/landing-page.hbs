<!-- products section starts  -->

<section class="products" id="products">

    <h1 class="heading"> exclusive <span>products</span> </h1>

    <div class="filter-buttons">
        <div class="buttons active" data-filter="all">all</div>

        <div class="buttons" data-filter="featured">Women</div>
        <div class="buttons" data-filter="special">Men</div>
        <div class="buttons" data-filter="seller">Kids</div>
    </div>

    <div class="box-container">
        {{#each products}}
        <div class="box" data-item="featured">
            <div class="icons">
                <a href="#" class="fas fa-shopping-cart"></a>
                <a href="#" class="fas fa-heart"></a>
                <a href="#" class="fas fa-search"></a>
                <a href="#" class="fas fa-eye"></a>
            </div>
            <div class="image">
                <img src="/product-images/{{this.Images.[0]}}" alt="">
            </div>
            <div class="content">
                <h3>{{this.Name}}</h3>
                <div class="price">
                    {{#if (eq this.Offer "true")}}
                    <div class="amount">{{this.DiscountPrice}}</div>
                    <div class="cut">{{this.ActualPrice}}</div>
                    <div class="offer">{{this.Discount}}% off</div>

                    {{else}}
                    <div class="amount">{{this.ActualPrice}}</div>
                    {{/if}}
                </div>
                <div class="stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="far fa-star"></i>
                    <span>(50)</span>
                </div>
            </div>
        </div>
        {{/each}}

    </div>

</section>

<!-- products section ends -->


