<section style="height:100vh ;background: #e6e6e6;">


  <div class="container">
    <span class="alert-danger h4" id="otpError"></span>
    <div class="brand-title">OTP LOGIN</div>
    <form action="/otp-login" method="post" id="otpForm">

      <div class="inputs">
        <label>Enter Registered Mobilenumber</label>
        <input type="text" name="Mobile" id="mobile" />

        <button type="button" onclick="checkMobile()">SEND OTP</button>
    </form>
  </div>

  </div>
</section>

<script>
  function checkMobile(userMobile) {
    var userMobile = $('#mobile').val();
    $.ajax({
      url: '/check-mobile',
      data: { mobile: userMobile },
      method: 'post',
      success: (response) => {

        if (response.status) {

          document.getElementById("otpForm").submit();

        } else {
          document.getElementById('otpError').innerHTML = "This number is not registered!!!";

        }
      }

    })
  }
</script>