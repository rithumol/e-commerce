                            <td>{{this.Address.Name}}</td>
                            <td>{{this.Address.City}}</td>
                            <td>{{this.Address.Address}}</td>

                            <td>{{this.Address.Pincode}}</td>
                            <td>{{this.Address.Mobile}}</td>

                            <td> <a href="/edit-address/{{this.Address.Address_id}}" class="btn btn-primary">Edit</a>


                                <a class="btn btn-danger" onclick="deleteAddress(event)"
                                    href="/delete-address/{{this.Address.Address_id}}">Delete</a>
                            </td>

                        </tr>

                        <script>
